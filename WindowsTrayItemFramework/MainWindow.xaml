<Window x:Class="WindowsTrayItemFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:WindowsTrayItemFramework"
        mc:Ignorable="d"
        Title="Backup Manager 3" Height="450" Width="800" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None" Opacity="0" Deactivated="Window_Deactivated" Activated="Window_Activated" ShowInTaskbar="False">
    <Grid x:Name="MainPanel">
        <tb:TaskbarIcon x:Name="NotifyIcon"
                        Visibility="Visible"
                        ToolTipText="Bachup Manager 3 - Double click to open" 
                        PopupActivation="All" 
                        TrayMouseDoubleClick="NotifyIcon_TrayMouseDoubleClick"
                        TrayRightMouseDown="NotifyIcon_TrayRightMouseDown">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu IsOpen="False">
                    <MenuItem Header="Exit" Click="ExitButton_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
